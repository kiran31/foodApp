<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:gravity="top"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingTop="8dp">


        <LinearLayout
            android:id="@+id/linear_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginRight="@dimen/space_12"
            android:gravity="center_vertical"
            android:orientation="vertical"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_header_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/space_8"
                    android:src="@drawable/user" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:gravity="center">

                <binplus.foodiswill.Fonts.LatoBLack
                    android:id="@+id/tv_header_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_8"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:text="Hey User"
                    android:padding="@dimen/space_6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center">

                <ImageView
                    android:id="@+id/Save"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="@dimen/space_2"
                    android:visibility="gone"
                    android:background="@drawable/ic_navigate_next_black_24dp" />
                <ImageView
                    android:id="@+id/close"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="@dimen/space_2"
                    android:background="@drawable/ic_chevron_left_black_24dp"
                    android:visibility="invisible"/>

            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/light_gray"
            android:layout_marginTop="@dimen/space_15"
            android:layout_marginBottom="@dimen/space_15"/>

        <LinearLayout
            android:id="@+id/change_store_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginRight="@dimen/space_12"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.1"
                android:gravity="center|left">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/space_8"
                    app:civ_border_color="@android:color/transparent"
                    app:civ_border_width="2dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.3"
                android:gravity="center">

                <binplus.foodiswill.Fonts.LatoBLack
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_8"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:text="Change Store"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="@dimen/space_2"
                    android:background="@drawable/ic_navigate_next_black_24dp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/viewpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

          >

            <LinearLayout
                android:id="@+id/linearLayout_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                >

                <RelativeLayout
                    android:id="@+id/my_orders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".4"

                   android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginBottom="@dimen/space_5"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        app:srcCompat="@drawable/order"
                        android:tint="@color/white"
                        android:layout_alignParentStart="true"/>


                    <binplus.foodiswill.Fonts.LatoBLack
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/space_2"
                        android:gravity="center"

                        android:text="@string/nav_order"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="60dp"
                        android:textAppearance="@style/NavDrawerTextStyle"
                        android:textColor="@color/white"
                        android:textSize="12dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/my_wishlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"

                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginBottom="@dimen/space_5"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"

                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_favorite_black_24dp" />


                    <binplus.foodiswill.Fonts.LatoBLack
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="60dp"
                        android:text="My Wishlist"
                        android:paddingTop="@dimen/space_2"
                        android:textAppearance="@style/NavDrawerTextStyle"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_12"
                        />


                </RelativeLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/my_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_4"
                    android:layout_weight=".4"

                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_account_balance_wallet_black_24dp" />


                    <binplus.foodiswill.Fonts.LatoBLack
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="@string/tv_app_name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#eae3e3"
                        android:textSize="@dimen/text_size_X_small" />


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/my_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"



                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_shopping_cart_black_24dp" />


                    <binplus.foodiswill.Fonts.LatoBLack
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="60dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingTop="@dimen/space_2"
                        android:text="My Cart"
                        android:textAppearance="@style/NavDrawerTextStyle"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/light_gray"
                  android:layout_marginTop="@dimen/space_15"
                    android:layout_marginBottom="@dimen/space_10"/>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>

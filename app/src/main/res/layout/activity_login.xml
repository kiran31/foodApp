<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="binplus.foodiswill.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/loginImage"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shapes"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_10"
            android:src="@drawable/icon"
            android:textAlignment="center" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <binplus.foodiswill.Fonts.LatoBLack
                android:id="@+id/tv_login_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:text="Mobile Number"
                android:textColor="#000"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/iconnemail"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="@dimen/space_10"
                android:src="@drawable/iconn" />

        </LinearLayout>


        <EditText
            android:hint="Enter Mobile Number"
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:background="@drawable/xml_textbox_bg"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:fontFamily="@font/bold"
            android:maxLength="10"
            android:padding="@dimen/space_10"
            android:textAlignment="center"
            android:textColor="#000"
            android:textColorHint="@color/dark_gray"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <binplus.foodiswill.Fonts.LatoBLack
                    android:id="@+id/tv_login_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="Mpin"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconp"
                    android:layout_toRightOf="@id/tv_login_password"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/space_10"
                    android:src="@drawable/iconn" />

                <EditText
                    android:hint="Enter Mpin"
                    android:id="@+id/et_login_pass"
                    android:layout_below="@id/tv_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_4"
                    android:background="@drawable/xml_textbox_bg"
                    android:ems="10"
                    android:fontFamily="@font/bold"
                    android:gravity="center_horizontal"
                    android:inputType="numberPassword"

                    android:padding="@dimen/space_10"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <binplus.foodiswill.Fonts.LatoBLack
                    android:id="@+id/tv_login_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="OTP"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iconotp"
                    android:layout_toRightOf="@id/tv_login_otp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/space_10"
                    android:src="@drawable/iconn" />

                <EditText
                    android:id="@+id/et_login_otp"
                    android:layout_below="@id/tv_login_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_4"
                    android:background="@drawable/xml_textbox_bg"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="@dimen/space_10"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textColorHint="@color/dark_gray"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_rounded_button"
            android:padding="12dp">

            <binplus.foodiswill.Fonts.LatoBLack
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/btn_continue"
                android:textColor="#fff"
                android:textSize="16dp" />


        </RelativeLayout>


        <TextView
            android:text="-----or-----"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="@color/dark_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button

            android:id="@+id/login_with_otp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:text="Login With OTP"
            android:layout_height="45dp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:textSize="@dimen/space_10"
            android:background="@drawable/bg_rounded_button"
            />



        <RelativeLayout
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="12dp"
            android:background="@drawable/bg_rounded_button"
            android:padding="12dp">

            <binplus.foodiswill.Fonts.LatoBLack
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/btn_Register"
                android:textColor="#fff"
                android:textSize="@dimen/space_16" />


        </RelativeLayout>

        <binplus.foodiswill.Fonts.LatoBLack
            android:id="@+id/btnForgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/forgot"
            android:textColor="@color/colorPrimary"

            android:textSize="14sp"
            />



    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorAccent1"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:paddingBottom="@dimen/space_20"
        android:layout_margin="@dimen/space_10">


        <ImageView

            android:layout_width="300dp"
            android:layout_height="220dp"
            android:src="@drawable/spls"/>
        <LinearLayout
            android:id="@+id/lin_reg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_5"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <binplus.foodiswill.Fonts.LatoBLack
                        android:id="@+id/tv_reg_name"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iconname"
                        android:src="@drawable/iconn"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/et_f_name"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/space_4"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:background="@drawable/bg_round_with_border"
                    android:padding="@dimen/space_10"
                    android:ems="10"
                    android:fontFamily="@font/bold"
                    android:singleLine="true"
                    android:hint="Enter First Name"
                    android:inputType="text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">
                    <binplus.foodiswill.Fonts.LatoBLack

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:layout_marginTop="@dimen/space_10"

                        android:text="Last Name "
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iconnemail"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/space_10"
                        android:src="@drawable/iconn" />

                </LinearLayout>


                <EditText

                    android:id="@+id/et_l_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:textSize="14sp"
                    android:fontFamily="@font/bold"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_round_with_border"
                    android:padding="@dimen/space_10"
                    android:ems="10"
                    android:singleLine="true"
                    android:hint="Enter Last Name"
                    android:inputType="textEmailAddress" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <binplus.foodiswill.Fonts.LatoBLack
                        android:textColor="#000"
                        android:id="@+id/tv_reg_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/et_login_phone_hint"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/space_10"/>

                    <ImageView
                        android:id="@+id/iconp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/space_10"
                        android:src="@drawable/iconn" />


                </LinearLayout>


                <EditText
                    android:layout_marginTop="@dimen/space_4"
                    android:textSize="14sp"
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_10"
                    android:fontFamily="@font/bold"
                    android:background="@drawable/bg_round_with_border"
                    android:padding="@dimen/space_10"
                    android:ems="10"
                    android:hint="Enter Mobile Number"
                    android:inputType="number"
                    android:maxLength="13" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <binplus.foodiswill.Fonts.LatoBLack
                        android:textColor="#000"
                        android:id="@+id/tv_reg_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/space_10"/>

                    <ImageView
                        android:id="@+id/iconc"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/space_10"
                        android:src="@drawable/iconn" />


                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_city"/>
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/tv_reg_note"
                    android:textSize="14sp" />-->

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Society/Flat(Optional)"
                    android:textSize="14dp"
                    android:id="@+id/textView4" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose Society..."
                    android:background="@drawable/xml_textbox_bg"
                    android:id="@+id/txtSocity"
                    android:layout_marginBottom="5dp"
                    android:drawableRight="@mipmap/ic_next"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"/>-->
                <LinearLayout
                    android:id="@+id/lin_pass"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <binplus.foodiswill.Fonts.LatoBLack
                        android:id="@+id/tv_mpin"
                        android:textColor="#000"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MPIN "
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iconpass"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/iconn" />

                    <binplus.foodiswill.Fonts.LatoBLack
                        android:textColor="@color/dark_gray"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(This will be required to login later)"
                        android:textSize="10sp" />
                </LinearLayout>




                <EditText
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/space_4"
                    android:id="@+id/et_reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/xml_textbox_bg"
                    android:inputType="numberPassword"
                    android:hint="Enter MPIN"

                    android:fontFamily="@font/bold"
                    android:maxLength="10"
                    android:ems="10"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <binplus.foodiswill.Fonts.LatoBLack
                        android:textColor="#000"
                        android:id="@+id/tv_reg_con_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm Password"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iconconpass"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/iconn" />

                </LinearLayout>




                <EditText
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/space_4"
                    android:id="@+id/et_reg__con_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:background="@drawable/xml_textbox_bg"
                    android:inputType="textPassword"
                    android:hint="Enter Confirm Password"
                    android:maxLength="10"
                    android:visibility="gone"
                    android:fontFamily="@font/bold"
                    android:ems="10"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView

                        android:src="@drawable/icons8_whatsapp_96px"
                        android:layout_gravity="center_vertical"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <binplus.foodiswill.Fonts.LatoBLack

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"

                        android:layout_gravity="center_vertical"
                        android:text="@string/whatsapp_contct_hint"
                        android:textSize="14sp" />

                </LinearLayout>
                    <RadioGroup
                        android:layout_marginLeft="@dimen/space_20"
                        android:id="@+id/rd_whatsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:buttonTint="@color/colorPrimary"

                            android:id="@+id/btn_yes"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no"
                            android:gravity="center_vertical"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/btn_no"/>
                    </RadioGroup>

                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/bg_rounded_button"
                    android:padding="12dp">

                    <binplus.foodiswill.Fonts.LatoBLack
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/btn_Register"
                        android:textColor="#fff"
                        android:textSize="@dimen/space_16"/>


                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_logo"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:layout_marginTop="-40dp"
            android:gravity="center_horizontal"
            android:text="@string/tagline"
            android:textColor="@color/tagline_color"
            android:textSize="20dp" />
        <binplus.foodiswill.Fonts.LatoBLack
            android:layout_marginTop="50dp"
            android:layout_above="@+id/rel_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"

            android:textSize="@dimen/space_15"
            android:text="Enter a valid Mobile number to recieve OTP."/>


        <RelativeLayout
            android:id="@+id/rel_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2"
            android:layout_marginLeft="@dimen/space_10"

            android:layout_marginRight="@dimen/space_10"
            android:background="@drawable/bg_round_with_border">
            <binplus.foodiswill.Fonts.LatoBLack
                android:id="@+id/txt91"
                android:text="+91 "
                android:background="@drawable/bg_rounded_button"

                android:layout_centerVertical="true"
                android:textSize="20dp"

                android:textAlignment="center"


                android:textColor="@color/white"
                android:padding="@dimen/space_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:fontFamily="@font/bold"
                android:id="@+id/et_reg_number"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/txt91"
                android:maxLength="10"
                android:inputType="number"
                android:padding="@dimen/space_10"
                android:hint="Mobile Number"
                android:background="@android:color/transparent"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_verify_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/bold"
            android:textAllCaps="false"
            android:layout_below="@+id/rel_num"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="@dimen/space_10"
            android:text="Submit"
            android:textColor="@color/white"
            android:background="@drawable/bg_rounded_button"/>
        </LinearLayout>
    </LinearLayout>

    </ScrollView>
</LinearLayout>
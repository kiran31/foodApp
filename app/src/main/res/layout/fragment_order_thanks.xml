<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/xml_box_shadow_bottom"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <binplus.foodiswill.Fonts.LatoBLack
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/tv_thanks_title"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp"
            android:textStyle="bold" />

        <binplus.foodiswill.Fonts.LatoBLack
            android:id="@+id/tv_thank_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <binplus.foodiswill.Fonts.LatoBLack
            android:id="@+id/tv_note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/btn_rate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="12dp"
            android:onClick="onClick"
            android:background="@drawable/bg_rounded_button"
            android:padding="12dp">

            <binplus.foodiswill.Fonts.LatoBLack
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Rate Us!"
                android:textColor="#fff"
                android:textSize="@dimen/space_16" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/btn_thank_home"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="12dp"
                android:onClick="onClick"
                android:background="@drawable/bg_rounded_button"
                android:padding="12dp">

                <binplus.foodiswill.Fonts.LatoBLack
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/tv_thanks_home"
                    android:textColor="#fff"
                    android:textSize="@dimen/space_16" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btn_track_order"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:onClick="goToAttract"
                android:layout_margin="12dp"
                android:background="@drawable/bg_rounded_button"
                android:padding="12dp">

                <binplus.foodiswill.Fonts.LatoBLack
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/tv_thanks_order"
                    android:textColor="#fff"
                    android:textSize="@dimen/space_16" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
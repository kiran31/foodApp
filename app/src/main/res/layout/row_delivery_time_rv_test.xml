<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/space_3"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp">

    <com.daimajia.swipe.SwipeLayout xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:gravity="center"
            android:tag="Bottom3"
            android:weightSum="10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:fontFamily="@font/bold"
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_rounded_button"
                    android:text="@string/edit"
                    android:textColor="@color/white" />

                <Button
                    android:fontFamily="@font/bold"
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/edit"
                    android:background="@drawable/bg_rounded_button"
                    android:text="@string/delete"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="@dimen/space_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_8">

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <binplus.foodiswill.Fonts.LatoBLack
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reciver_name"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="@dimen/space_15"
                            />

                        <binplus.foodiswill.Fonts.LatoBLack
                            android:id="@+id/tv_adres_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:layout_marginStart="@dimen/space_2"
                            android:textSize="@dimen/space_15"
                            android:text="TextView"
                            android:textColor="#000" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:orientation="horizontal">

                        <binplus.foodiswill.Fonts.LatoBLack
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_deli_mobile"
                            android:textStyle="bold"
                            android:textSize="@dimen/space_15"
                            android:textColor="#000"
                            />

                        <binplus.foodiswill.Fonts.LatoBLack
                            android:id="@+id/tv_adres_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:layout_marginStart="@dimen/space_2"
                            android:text="TextView"
                            android:textColor="#000"
                            android:textSize="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:orientation="horizontal">

                        <binplus.foodiswill.Fonts.LatoBLack
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delivery_charge"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="@dimen/space_15"
                            android:visibility="gone"/>

                        <binplus.foodiswill.Fonts.LatoBLack
                            android:id="@+id/tv_adres_charge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:layout_marginStart="@dimen/space_2"
                            android:text="TextView"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:visibility="gone"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:orientation="horizontal">

                        <binplus.foodiswill.Fonts.LatoBLack
                            android:id="@+id/textViewadd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address :"
                            android:textStyle="bold"
                            android:textSize="@dimen/space_15"
                            android:textColor="#000"
                            />

                        <binplus.foodiswill.Fonts.LatoBLack
                            android:id="@+id/tv_adres_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:layout_marginStart="@dimen/space_2"
                            android:text="TextView"
                            android:textColor="#000"
                            android:textSize="15dp"/>
                    </LinearLayout>


                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></RelativeLayout>

                <RadioButton
                    android:id="@+id/rb_adres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
android:layout_centerVertical="true"

                    android:layout_marginLeft="@dimen/space_8" />

            </RelativeLayout>
        </LinearLayout>
    </com.daimajia.swipe.SwipeLayout>


</androidx.cardview.widget.CardView>
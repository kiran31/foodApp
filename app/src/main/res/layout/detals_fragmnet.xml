<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="binplus.foodiswill.Fragment.Details_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_5"
            android:paddingRight="@dimen/space_5">

            <TextView
                android:id="@+id/details_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:maxLines="3"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/bold"
                android:textStyle="bold"
                android:text="Name"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <binplus.foodiswill.Fonts.LatoBLack
                    android:id="@+id/details_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19dp"
                    android:padding="@dimen/space_2"
                    android:textColor="@color/black"

                    android:text="Name"
                    />
                <TextView
                    android:id="@+id/details_product_mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="3dp"
                    android:textSize="15dp"


                    android:padding="2dp"
                    android:layout_toRightOf="@id/details_product_price"
                    android:text="Name"

                    />
                <TextView
                    android:id="@+id/price_diff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="3dp"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/color_3"
                    android:padding="2dp"
                    android:layout_toRightOf="@id/details_product_price"
                    android:text="Name"

                    />

            </LinearLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:background="@color/dark_gray"/>
            <RelativeLayout
                android:id="@+id/relative_layout_img"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/space_10"
                    />
                <com.daimajia.slider.library.SliderLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:id="@+id/img_slider"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"

                    >
                    <ImageView
                        android:id="@+id/iv_dis"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/dis_banner"/>
                    <binplus.foodiswill.Fonts.LatoBLack
                        android:id="@+id/details_product_per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="3dp"
                        android:textSize="15dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/yelow"
                        android:padding="2dp"

                        android:text="Name"

                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    >


                    <ImageView
                        android:id="@+id/wish_before"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/space_8"

                        app:srcCompat="@drawable/wish_before"
                        />
                    <ImageView
                        android:id="@+id/wish_after"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"

                        android:layout_margin="@dimen/space_8"

                        app:srcCompat="@drawable/wish_after"
                        android:visibility="gone"
                        />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rel_out"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/soldout"/>

                </RelativeLayout>
            </RelativeLayout>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:background="@color/dark_gray"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/space_5"
                android:layout_below="@id/txtSize"
                app:cardCornerRadius="3dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingRight="10dp"

                    android:paddingBottom="10dp"


                    >


                    <binplus.foodiswill.Fonts.LatoBLack
                        android:id="@+id/txtId"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:textSize="10dp"

                        android:text="Weight:"

                        android:visibility="invisible"
                        />
                    <binplus.foodiswill.Fonts.LatoBLack
                        android:id="@+id/txtVar"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:textSize="10dp"

                        android:text="Weight:"

                        android:visibility="invisible"
                        />

                    <binplus.foodiswill.Fonts.LatoBLack
                        android:id="@+id/txtrate"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10"
                        android:textSize="15dp"

                        android:text="Weight:"
                        android:padding="5dp"


                        />

                    <binplus.foodiswill.Fonts.LatoBLack
                        android:layout_marginTop="@dimen/space_10"
                        android:id="@+id/product_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_10"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:text="Rate"
                        android:layout_alignParentRight="true"
                        />
                    <RelativeLayout
                        android:id="@+id/rel_variant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txtrate"
                        android:layout_marginTop="@dimen/space_10"
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_marginRight="@dimen/space_10"
                        android:visibility="gone"
                        android:background="@drawable/relative_unit_layout">
                        <binplus.foodiswill.Fonts.LatoBLack
                            android:id="@+id/unit_type"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"

                            android:text="Weight:"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        <ImageView

                            android:layout_alignParentEnd="true"
                            android:background="@drawable/ic_arrow_drop_down_black_24dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp">

                        </ImageView>

                    </RelativeLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:visibility="gone"
                android:background="@color/dark_gray"/>


            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:background="@color/dark_gray"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:padding="@dimen/space_10"
                app:cardElevation="@dimen/space_5"
                android:id="@+id/card_icons"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/space_10"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_marginBottom="@dimen/space_5"
                        android:elevation="@dimen/space_5"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:id="@+id/rel_returns">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/rewardsimg"
                            android:background="@drawable/retunrs"
                            android:backgroundTint="@color/colorPrimary"
                            android:padding="@dimen/space_5"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Easy \n Returns"

                            android:textSize="@dimen/space_12"
                            android:padding="@dimen/space_2"
                            android:textAlignment="gravity"
                            android:gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/dark_gray"
                        android:layout_marginTop="@dimen/space_15"
                        android:layout_marginBottom="@dimen/space_15"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_marginBottom="@dimen/space_5"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:id="@+id/rel_details"
                        android:elevation="@dimen/space_5">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/descimg"
                            android:background="@drawable/load_carriage"
                            android:backgroundTint="@color/colorPrimary"
                            android:padding="@dimen/space_5"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fast\nDelivery"

                            android:textSize="@dimen/space_12"
                            android:padding="@dimen/space_2"
                            android:textAlignment="gravity"
                            android:gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/dark_gray"
                        android:layout_marginTop="@dimen/space_15"
                        android:layout_marginBottom="@dimen/space_15"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="@dimen/space_5"
                        android:layout_marginBottom="@dimen/space_5"
                        android:gravity="center_horizontal"
                        android:id="@+id/rel_related"
                        android:elevation="@dimen/space_5">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/relimg"
                            android:background="@drawable/verified"
                            android:backgroundTint="@color/colorPrimary"
                            android:padding="@dimen/space_5"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Verified\n Products"

                            android:textSize="@dimen/space_12"
                            android:padding="@dimen/space_2"
                            android:textAlignment="gravity"
                            android:gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:background="@color/dark_gray"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/space_5"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line2"
                        android:id="@+id/descriptionTitle"
                        android:text="Description :"
                        android:textSize="16dp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"

                        />
                    <com.borjabravo.readmoretextview.ReadMoreTextView
                        android:id="@+id/details_product_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/space_13"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:text="Name"
                        android:maxLines="4"
                        android:ellipsize="end"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:background="@color/dark_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <binplus.foodiswill.Fonts.LatoBLack
                    android:id="@+id/txtw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:text="Select Quantity :"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"


                    />



                <com.travijuu.numberpicker.library.NumberPicker
                    android:id="@+id/product_qty"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/space_10"

                    android:elevation="6dp"
                    app:textSize="8dp"


                    app:textColor="@color/white"

                    />
            </RelativeLayout>

                <Button
                    android:fontFamily="@font/bold"
                    android:id="@+id/btn_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_10"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_rounded_button"
                    android:clickable="true"
                    android:text="Add to Cart"
                    android:textColor="@color/white" />


            <RelativeLayout
                android:id="@+id/rel_relative_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view4"
                android:paddingBottom="60dp"
                >
                <binplus.foodiswill.Fonts.LatoBLack
                    android:textSize="@dimen/space_15"
                    android:background="@color/white"
                    android:id="@+id/txt_related"
                    android:text=" Similar Products"
                    android:padding="@dimen/space_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/txt_related"
                    android:id="@+id/top_selling_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="8dp"

                    android:layout_marginRight="8dp"
                    android:background="@color/all"
                    android:scrollbars="none"
                    android:layout_marginBottom="10dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >

            <RelativeLayout
                android:id="@+id/relll"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:visibility="gone"
                android:background="@color/tot"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/imgg"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/cart_fill"/>
                    <binplus.foodiswill.Fonts.LatoBLack
                        android:id="@+id/product_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5"
                        android:paddingRight="@dimen/space_5"
                        android:layout_toRightOf="@id/imgg"
                        android:textAlignment="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textStyle="bold|italic"



                        />

                </RelativeLayout>

            </RelativeLayout>
            <Button
                android:fontFamily="@font/bold"
                android:id="@+id/btn_f_Add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/relll"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:text="Checkout"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>

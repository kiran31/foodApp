<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/space_10"
    android:background="@color/colorPrimaryDark"
    tools:context=".OtpGenerateActivity">
    <ImageView
        android:id="@+id/verifyimg"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/space_20"
        android:layout_centerHorizontal="true"
        android:src="@drawable/smss"

        />
    <binplus.foodiswill.Fonts.LatoBLack
        android:layout_above="@+id/et_gen_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:textSize="@dimen/space_15"
        android:text="Enter a valid Mobile number to recieve otp."/>

    <EditText
        android:fontFamily="@font/bold"
        android:id="@+id/et_gen_otp"
        android:hint="Mobile number"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginBottom="@dimen/space_12"
        android:layout_height="wrap_content"
         android:background="@drawable/bg_round_with_border"

        android:padding="@dimen/space_10"
        android:inputType="number"
        android:maxLength="10"
        android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/btn_otp_verify"
        android:text=" Generate OTP"
        android:layout_below="@id/et_gen_otp"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:fontFamily="@font/bold"
        android:textAllCaps="false"
        android:textSize="@dimen/space_16"
        android:background="@drawable/bg_rounded_button"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"/>



</RelativeLayout>